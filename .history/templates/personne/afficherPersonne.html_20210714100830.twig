{% extends 'base.html.twig' %}

{% block title %}Personne{% endblock %}

{% block monTitre %}{{ personne.nom }}{% endblock %}

{% block body %}
{% for personne in personnes %}
    {# <h2 class="border-bottom border-primary"><a href="{{path('afficher_personne',{'id':personne.id})}}">{{ personne.nom | capitalize }}</a></h2> #}
    <h2 class="border-bottom border-primary"><a href="{{path('afficher_personne',{'id':personne.id})}}">{{ personne.nom | capitalize }}</a></h2>
    <h3>Ses animaux de compagnie :
    <div class="row">
        {% for dispose in personne.disposes %}
            <div class="col-6">
                <div class="row align-items-center">
                    <div class="col-12 cold-md-6 col-lg-2 text-center">
                        <img src="{{asset('images/' ~ dispose.animal.image)}}" class="img-fluid">
                    </div>
                    <div class="col text-center">
                        <h2><a href="{{path('afficher_animal',{'id' : dispose.animal.id})}}">{{ dispose.animal.nom }}</a></h2>
                        <div>Nombre : {{ dispose.nb }}</div>
                    </div>
                </div> 
            </div>
        {% endfor %}
    </div>
{% endfor %}

		{% endblock %}
